<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="-90" android:endColor="#00FF00" android:startColor="#009900" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
            <item android:top="24dp">
                <shape>
                    <gradient android:angle="-90" android:endColor="#0ff" android:startColor="#f00" />
                    <corners android:bottomLeftRadius="10dp" android:bottomRightRadius="10dp" />
                    <padding android:left="10dp" android:right="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="2dp" android:color="#00f" android:dashGap="2dp" android:dashWidth="3dp" />
                    <gradient android:angle="90" android:endColor="#f00" android:startColor="#ff0" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
            <item android:top="24dp">
                <shape>
                    <gradient android:angle="90" android:endColor="#0ff" android:startColor="#009900" />
                    <corners android:bottomLeftRadius="10dp" android:bottomRightRadius="10dp" />
                    <padding android:left="10dp" android:right="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>